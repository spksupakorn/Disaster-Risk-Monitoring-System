# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration (Production)
DB_HOST=your-production-db-host.rds.amazonaws.com
DB_PORT=5432
DB_NAME=disaster_monitoring_prod
DB_USER=your_db_user
DB_PASSWORD=your_secure_password
DB_SSL_ENABLED=true
DB_SSL_REJECT_UNAUTHORIZED=true
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_ACQUIRE_TIMEOUT=30000
DB_POOL_IDLE_TIMEOUT=30000

# Redis Configuration (Production)
REDIS_HOST=your-production-redis-host.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_CACHE_TTL=900

# External API Keys
OPENWEATHER_API_KEY=your_openweather_api_key
USGS_API_URL=https://earthquake.usgs.gov/fdsnws/event/1/query

# Messaging Services
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=your_verified_sender_email

# Risk Calculation Thresholds
FLOOD_HIGH_THRESHOLD=50
EARTHQUAKE_HIGH_THRESHOLD=5.0
WILDFIRE_TEMP_THRESHOLD=35
WILDFIRE_HUMIDITY_THRESHOLD=30

# Background Service (Every 15 minutes)
RISK_FETCH_CRON=*/15 * * * *
