  "keywords": ["disaster", "monitoring", "risk-assessment", "clean-architecture"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@mikro-orm/core": "^5.9.7",
    "@mikro-orm/postgresql": "^5.9.7",
    "@mikro-orm/migrations": "^5.9.7",
    "@mikro-orm/reflection": "^5.9.7",
    "express": "^4.18.2",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.8.0",
    "zod": "^3.22.4",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "redis": "^4.6.11",
    "axios": "^1.6.2",
    "node-cron": "^3.0.3",
    "dotenv": "^16.3.1",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "twilio": "^4.19.0",
    "@sendgrid/mail": "^8.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.4",
    "@types/node-cron": "^3.0.11",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/jest": "^29.5.11",
    "@mikro-orm/cli": "^5.9.7",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/infrastructure/database/mikro-orm.config.ts",
      "./dist/infrastructure/database/mikro-orm.config.js"
    ]
  }
